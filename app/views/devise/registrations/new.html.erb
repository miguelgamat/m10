<h1>Registrar comunidad/club</h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<h3> Primer paso</h3>
<p>Registrarse como administrador para la aplicación de reservas</p>
  <div class="field">
    <%= f.label :name ,'Nombre' %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div data-fv-notempty="true" class="field"> 
    <%= f.label :last_name, 'Apellido' %><br />
    <%= f.text_field :last_name %>
  </div>

  <div class="field"> 
    <%= f.label :address, 'Dirección' %><br />
    <%= f.text_field :address %>
  </div>

  <div class="field"> 
    <%= f.label :zip_code, 'Código postal' %><br />
    <%= f.text_field :zip_code %>
  </div>
<!-- 
  <div class="field"> 
    <%= f.label :flat, 'Piso' %><br />
    <%= f.text_field :flat %>
  </div> -->

<!--   <div class="field"> 
    <%= f.label :letter_flat %><br />
    <%= f.text_field :letter_flat %>
  </div>
 -->
  <div class="field"> 
    <%= f.label :mobile_number, 'Teléfono móvil' %><br />
    <%= f.text_field :mobile_number %>
  </div>

  <div class="field" hidden> 
    <%= f.label :admin %><br />
    <%= f.text_field :admin, :value => true %>
  </div>

  <div data-fv-notempty="true" class="field">
    <%= f.label :email, 'Correo electrónico' %><br />
    <%= f.email_field :email %>
  </div>

  <div class="field">
    <%= f.label :password, 'Contraseña' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres mínimos)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, 'Confirmar contraseña' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Registrar" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

